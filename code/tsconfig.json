{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true, // 启用 JSON 模块解析
    "experimentalDecorators":true  // 启用对装饰器（Decorators）的支持
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}